<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:wSignerUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="wSignerUI.MainWindow"
    x:Name="Window"
    Title="wSigner"
    Width="384" 
    Height="84" 
    ResizeMode="NoResize" 
    WindowStyle="None" 
    AllowsTransparency="True" KeyUp="Window_KeyUp" Drop="Window_Drop" AllowDrop="True" DragEnter="Window_DragEnter" Background="{x:Null}" Icon="/wSignerUI;component/Application.ico">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Window.ToolTip>
        <TextBlock>
            <Run Text=" - "/>
            <Bold><Run Text="To sign a document"/></Bold>
            <Run Text=" Drag and drop the document into this box. (The document must be one of the following formats: pdf, docx, xlsx, pptx)"/>
            <LineBreak/>
            <Run Text=" - "/>
            <Bold><Run Text="To move this box"/></Bold>
            <Run Text=" just drag it around."/>
            <LineBreak/>
            <Run Text=" - "/>
            <Bold><Run Text="To close this box"/></Bold>
            <Run Text=" press [ESC]"/>
        </TextBlock>
    </Window.ToolTip>
    <Window.DataContext>
        <local:DocumentSignerViewModel/>
    </Window.DataContext>
    <Grid x:Name="LayoutRoot" MouseDown="LayoutRoot_MouseDown">
    	<Grid.Background>
    		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    			<GradientStop Color="Gray" Offset="0"/>
    			<GradientStop Color="#FF707070" Offset="1"/>
    			<GradientStop Color="White" Offset="0.5"/>
    		</LinearGradientBrush>
    	</Grid.Background>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>